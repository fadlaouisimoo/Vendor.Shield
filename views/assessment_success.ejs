<div style="text-align:center;padding:40px 20px;max-width:600px;margin:0 auto">
	<h2 style="color:var(--text);margin-bottom:20px"><%= lang === 'en' ? 'Thank you!' : 'Merci !' %></h2>
	<p style="color:var(--text);font-size:18px;margin-bottom:16px"><%= t('assessment.submitSuccess') %></p>
	<div style="background:var(--card);border:1px solid var(--border);border-radius:12px;padding:24px;margin:24px 0">
		<div style="display:flex;align-items:center;justify-content:center;gap:12px;margin-bottom:16px">
			<svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="#f59e0b" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
				<circle cx="12" cy="12" r="10"/>
				<path d="M12 6v6l4 2"/>
			</svg>
		</div>
		<p style="color:var(--text);font-size:16px;margin-bottom:12px"><strong><%= t('assessment.awaitingValidation') %></strong></p>
		<p style="color:var(--muted);font-size:14px;margin:0"><%= t('assessment.validationMessage') %></p>
	</div>
	<div style="margin-top:24px">
		<a href="<%= urlWithLang('/assessment/' + token + '/status') %>" class="btn" style="display:inline-flex;align-items:center;gap:8px">
			<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
				<circle cx="12" cy="12" r="10"/>
				<polyline points="12 6 12 12 16 14"/>
			</svg>
			<%= t('assessment.checkStatus') %>
		</a>
	</div>
	<div style="margin-top:32px;padding:16px;background:rgba(245,158,11,.1);border:1px solid rgba(245,158,11,.3);border-radius:8px">
		<p style="color:var(--text);font-size:14px;margin:0 0 8px 0;font-weight:600">
			<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align:middle;margin-right:6px">
				<path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
				<polyline points="22,6 12,13 2,6"/>
			</svg>
			<%= t('assessment.emailNotification') %>
		</p>
		<p style="color:var(--muted);font-size:13px;margin:0">
			<%= t('assessment.emailNotificationMessage') %>
		</p>
	</div>
	<p style="color:var(--muted);font-size:14px;margin-top:24px"><%= t('assessment.closePage') %></p>
</div>


